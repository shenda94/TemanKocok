<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.merna.temankocok.BuatGroupActivity"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/green"
android:gravity="center"
android:orientation="vertical"
android:padding="10dp" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <!-- Login Button -->

    <TextView
        android:id="@+id/TXTKETERANGAN2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="lihat atau buat group baru"
        android:padding="1dp" />

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_atas"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btngroupbaru"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/colorPrimaryDark"
        android:text="Group Baru"
        android:textColor="#ffffff" />

    <!-- Link to Login Screen -->

    <Button
        android:id="@+id/btnscangroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/colorPrimaryDark"
        android:text="Scan Group"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_bawah"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/TXTKETERANGAN1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="join group"
        android:padding="1dp" />


</LinearLayout>

</LinearLayout>
