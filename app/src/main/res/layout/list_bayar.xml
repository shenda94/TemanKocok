<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_list_row"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingRight="?listPreferredItemPaddingRight"
    android:paddingTop="@dimen/padding_list_row">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/message_container_jad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="@dimen/padding_list_row">

            <TextView
                android:id="@+id/bayar_jad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/from"
                android:text="Bayar Rp."
                android:textSize="@dimen/msg_text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/harus_jad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/from"
                android:text="Iuran Rp."
                android:textSize="@dimen/msg_text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white"
                android:text="Status Lunas"
                android:textSize="@dimen/msg_text_primary"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/nmkocokan_jad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/timestamp"
                    android:layout_alignParentRight="true"
                    android:text="Pemain"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pemilik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/timestamp"
                    android:text="Pemilik"
                    android:tint="@color/icon_tint_normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/icon_star_jad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/timestamp"
                        android:text="Group"
                        android:tint="@color/icon_tint_normal"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"/>


                    <TextView
                        android:id="@+id/periode_byr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timestamp"
                        android:textSize="@dimen/timestamp"
                        android:layout_alignParentRight="true"
                        android:text="Periode"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jenis_jad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/timestamp"
                        android:text="Jenis Pembayaran"
                        android:textSize="@dimen/timestamp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/tglbayar_jad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/timestamp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="tgl bayar"
                        android:textStyle="bold" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/statusbayar_jad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/timestamp"
                    android:layout_alignParentRight="true"
                    android:text="status bayar"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>