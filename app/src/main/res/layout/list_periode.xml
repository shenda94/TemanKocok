<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_list_row"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingRight="?listPreferredItemPaddingRight"
    android:paddingTop="@dimen/padding_list_row">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/icon_container_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/icon_front_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_profile_pr"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/message_container_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="@dimen/padding_list_row">

            <TextView
                android:id="@+id/from_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/from"
                android:text="nama periode"
                android:textSize="@dimen/msg_text_primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/timestamp_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/timestamp"
                    android:layout_alignParentRight="true"
                    android:text="Nominal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/icon_star_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/timestamp"
                    android:text="Group"
                    android:tint="@color/icon_tint_normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/akun_tr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/timestamp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="10dp"
                        android:text="tgl periode"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tglkocok_pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timestamp"
                        android:textSize="@dimen/timestamp"
                        android:layout_alignParentRight="true"
                        android:text="tgl kocok"
                        android:textStyle="bold" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/id_group_arisan_pr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/id_periodepr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/id_user_pr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>